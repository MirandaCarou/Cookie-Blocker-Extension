{
  "name": "Cookie Controller",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Bloquea cookies no esenciales",
  "icons": {
    "128": "./icons/cookie.png"
  },
  "permissions": [
    "webNavigation",
    "cookies",
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"],
      "js": [
        "./js/Handlers/handler.js",
        "./js/Handlers/didomi.js",
        "./js/Handlers/oneTrust.js",
        "./js/Handlers/cookieYes.js",
        "./js/Handlers/cookieNotice.js",
        "./js/Handlers/complianz.js",
        "./js/Handlers/osano.js",
        "./js/setUp.js",
        "./js/content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "./js/background.js"
  },
  "action": {
    "default_popup": "./html/popup.html",
    "default_icon": {
      "16": "./icons/cookie.png",
      "32": "./icons/cookie.png",
      "48": "./icons/cookie.png",
      "128": "./icons/cookie.png"
    }
  }
}
