{
  "name": "Cookie cracker",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Bloquea cookies no esenciales",
  "icons": {
    "128": "/icons/cookie.png"
  },
  "permissions": [
    "cookies",
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"],
      "js": ["./Handlers/handler.js","./Handlers/didomi.js","./Handlers/oneTrust.js","content-script.js", "setUp.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/cookie.png",
      "32": "/icons/cookie.png",
      "48": "/icons/cookie.png",
      "128": "/icons/cookie.png"
    }
  }
}
